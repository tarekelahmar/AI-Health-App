# Environment
ENVIRONMENT=development
DEBUG=true

# Database
# PostgreSQL example: postgresql://user:password@localhost:5432/health_app
# SQLite example: sqlite:///./test.db
DATABASE_URL=postgresql://postgres:your_password@localhost:5432/health_app

# Redis (optional, for caching)
REDIS_URL=redis://localhost:6379

# OpenAI (required for RAG engine)
OPENAI_API_KEY=sk-...
OPENAI_MODEL=gpt-4
OPENAI_TEMPERATURE=0.3
OPENAI_EMBEDDING_MODEL=text-embedding-ada-002

# Vector DB (choose one: chroma or pinecone)
VECTOR_DB_TYPE=chroma
CHROMA_DB_PATH=./chroma_db
PINECONE_API_KEY=...
PINECONE_INDEX=health-app

# Security (MUST change in production!)
SECRET_KEY=your-super-secret-key-change-in-prod-min-32-chars
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# CORS
CORS_ORIGINS=*
CORS_CREDENTIALS=true
CORS_METHODS=*
CORS_HEADERS=*
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173
FRONTEND_URL=

# Email (for notifications)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# Wearables
FITBIT_CLIENT_ID=...
FITBIT_CLIENT_SECRET=...
OURA_API_KEY=...
WHOOP_CLIENT_ID=...

# Feature flags
ENABLE_EMAIL_ALERTS=true
ENABLE_RAG_ENGINE=true
ENABLE_WEARABLE_SYNC=true
ENABLE_RATE_LIMITING=true

# Rate Limiting
RATE_LIMIT_INSIGHTS=10/minute
RATE_LIMIT_LLM=5/minute
RATE_LIMIT_AUTH=5/minute
RATE_LIMIT_GENERAL=100/hour

# Logging
LOG_LEVEL=INFO

# File Paths
HEALTH_ONTOLOGY_PATH=app/core/health_ontology.json
KNOWLEDGE_BASE_PATH=knowledge_base/protocols.md

# RAG Configuration
RAG_CHUNK_SIZE=500
RAG_CHUNK_OVERLAP=50
RAG_RETRIEVER_K=3

# Assessment Configuration
ASSESSMENT_DAYS=30
ASSESSMENT_MAX_RESULTS=5

# Supabase (optional)
SUPABASE_URL=
SUPABASE_ANON_KEY=
