# Development Environment Configuration
# Copy this to .env for local development

ENVIRONMENT=development
DEBUG=true

# Database - Use SQLite for easy local development
DATABASE_URL=sqlite:///./dev.db

# Redis (optional)
REDIS_URL=redis://localhost:6379

# OpenAI (set your key for local testing)
OPENAI_API_KEY=
OPENAI_MODEL=gpt-4
OPENAI_TEMPERATURE=0.3
OPENAI_EMBEDDING_MODEL=text-embedding-ada-002

# Vector DB
VECTOR_DB_TYPE=chroma
CHROMA_DB_PATH=./chroma_db
PINECONE_API_KEY=
PINECONE_INDEX=health-app-dev

# Security (development key - change in production!)
SECRET_KEY=dev-secret-key-change-in-production-min-32-characters
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# CORS - Allow all for development
CORS_ORIGINS=*
CORS_CREDENTIALS=true
CORS_METHODS=*
CORS_HEADERS=*
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173,http://localhost:8000
FRONTEND_URL=

# Email (not required for dev)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=

# Wearables (optional for dev)
FITBIT_CLIENT_ID=
FITBIT_CLIENT_SECRET=
OURA_API_KEY=
WHOOP_CLIENT_ID=

# Feature flags - Enable all for development
ENABLE_EMAIL_ALERTS=false
ENABLE_RAG_ENGINE=true
ENABLE_WEARABLE_SYNC=true
ENABLE_RATE_LIMITING=false

# Rate Limiting (relaxed for dev)
RATE_LIMIT_INSIGHTS=100/minute
RATE_LIMIT_LLM=50/minute
RATE_LIMIT_AUTH=20/minute
RATE_LIMIT_GENERAL=1000/hour

# Logging
LOG_LEVEL=DEBUG

# File Paths
HEALTH_ONTOLOGY_PATH=app/core/health_ontology.json
KNOWLEDGE_BASE_PATH=knowledge_base/protocols.md

# RAG Configuration
RAG_CHUNK_SIZE=500
RAG_CHUNK_OVERLAP=50
RAG_RETRIEVER_K=3

# Assessment Configuration
ASSESSMENT_DAYS=30
ASSESSMENT_MAX_RESULTS=5

# Supabase (optional)
SUPABASE_URL=
SUPABASE_ANON_KEY=
