# Production Environment Configuration
# DO NOT COMMIT THIS FILE WITH REAL VALUES
# Store securely (e.g., AWS Secrets Manager, HashiCorp Vault)

ENVIRONMENT=production
DEBUG=false

# Database - PostgreSQL for production
DATABASE_URL=postgresql://user:password@prod-db-host:5432/health_app_prod

# Redis
REDIS_URL=redis://prod-redis-host:6379

# OpenAI
OPENAI_API_KEY=sk-prod-key-here
OPENAI_MODEL=gpt-4
OPENAI_TEMPERATURE=0.3
OPENAI_EMBEDDING_MODEL=text-embedding-ada-002

# Vector DB
VECTOR_DB_TYPE=chroma
CHROMA_DB_PATH=./chroma_db
PINECONE_API_KEY=
PINECONE_INDEX=health-app-prod

# Security (MUST be strong and unique in production!)
SECRET_KEY=CHANGE-THIS-TO-A-STRONG-RANDOM-SECRET-KEY-MIN-32-CHARS
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# CORS - Restrict to production frontend only
CORS_ORIGINS=https://yourdomain.com
CORS_CREDENTIALS=true
CORS_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_HEADERS=*
ALLOWED_ORIGINS=https://yourdomain.com
FRONTEND_URL=https://yourdomain.com

# Email
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=prod-email@yourdomain.com
SMTP_PASSWORD=prod-app-password

# Wearables
FITBIT_CLIENT_ID=prod-client-id
FITBIT_CLIENT_SECRET=prod-client-secret
OURA_API_KEY=prod-oura-key
WHOOP_CLIENT_ID=prod-whoop-id

# Feature flags
ENABLE_EMAIL_ALERTS=true
ENABLE_RAG_ENGINE=true
ENABLE_WEARABLE_SYNC=true
ENABLE_RATE_LIMITING=true

# Rate Limiting (stricter in production)
RATE_LIMIT_INSIGHTS=10/minute
RATE_LIMIT_LLM=5/minute
RATE_LIMIT_AUTH=5/minute
RATE_LIMIT_GENERAL=100/hour

# Logging
LOG_LEVEL=INFO

# File Paths
HEALTH_ONTOLOGY_PATH=app/core/health_ontology.json
KNOWLEDGE_BASE_PATH=knowledge_base/protocols.md

# RAG Configuration
RAG_CHUNK_SIZE=500
RAG_CHUNK_OVERLAP=50
RAG_RETRIEVER_K=3

# Assessment Configuration
ASSESSMENT_DAYS=30
ASSESSMENT_MAX_RESULTS=5

# Supabase (optional)
SUPABASE_URL=
SUPABASE_ANON_KEY=
