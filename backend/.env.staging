# Staging Environment Configuration
# DO NOT COMMIT THIS FILE WITH REAL VALUES

ENVIRONMENT=staging
DEBUG=false

# Database - PostgreSQL for staging
DATABASE_URL=postgresql://user:password@staging-db-host:5432/health_app_staging

# Redis
REDIS_URL=redis://staging-redis-host:6379

# OpenAI
OPENAI_API_KEY=sk-staging-key-here
OPENAI_MODEL=gpt-4
OPENAI_TEMPERATURE=0.3
OPENAI_EMBEDDING_MODEL=text-embedding-ada-002

# Vector DB
VECTOR_DB_TYPE=chroma
CHROMA_DB_PATH=./chroma_db
PINECONE_API_KEY=
PINECONE_INDEX=health-app-staging

# Security (MUST be strong in staging!)
SECRET_KEY=CHANGE-THIS-TO-A-STRONG-RANDOM-SECRET-KEY-MIN-32-CHARS
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# CORS - Restrict to staging frontend
CORS_ORIGINS=https://staging.yourdomain.com
CORS_CREDENTIALS=true
CORS_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_HEADERS=*
ALLOWED_ORIGINS=https://staging.yourdomain.com
FRONTEND_URL=https://staging.yourdomain.com

# Email
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=staging-email@yourdomain.com
SMTP_PASSWORD=staging-app-password

# Wearables
FITBIT_CLIENT_ID=staging-client-id
FITBIT_CLIENT_SECRET=staging-client-secret
OURA_API_KEY=staging-oura-key
WHOOP_CLIENT_ID=staging-whoop-id

# Feature flags
ENABLE_EMAIL_ALERTS=true
ENABLE_RAG_ENGINE=true
ENABLE_WEARABLE_SYNC=true
ENABLE_RATE_LIMITING=true

# Rate Limiting
RATE_LIMIT_INSIGHTS=10/minute
RATE_LIMIT_LLM=5/minute
RATE_LIMIT_AUTH=5/minute
RATE_LIMIT_GENERAL=100/hour

# Logging
LOG_LEVEL=INFO

# File Paths
HEALTH_ONTOLOGY_PATH=app/core/health_ontology.json
KNOWLEDGE_BASE_PATH=knowledge_base/protocols.md

# RAG Configuration
RAG_CHUNK_SIZE=500
RAG_CHUNK_OVERLAP=50
RAG_RETRIEVER_K=3

# Assessment Configuration
ASSESSMENT_DAYS=30
ASSESSMENT_MAX_RESULTS=5

# Supabase (optional)
SUPABASE_URL=
SUPABASE_ANON_KEY=
