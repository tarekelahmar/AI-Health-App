# ==================== Application Configuration ====================
# Copy this file to .env and fill in your actual values

# Environment
ENVIRONMENT=development
DEBUG=false

# ==================== API Configuration ====================
API_TITLE=Health App API
API_VERSION=0.1.0
API_DESCRIPTION=A FastAPI-based health application with AI-powered insights

# CORS Configuration (comma-separated for multiple origins, or * for all)
CORS_ORIGINS=*
CORS_CREDENTIALS=true
CORS_METHODS=*
CORS_HEADERS=*

# ==================== Database Configuration ====================
# Supabase Database Connection String
# Get this from: Supabase Dashboard > Settings > Database > Connection String > Method: "Session Pooler"
# Format: postgresql://postgres.[PROJECT-REF]:[PASSWORD]@aws-1-eu-north-1.pooler.supabase.com:5432/postgres
DATABASE_URL=postgresql://postgres.[PROJECT-REF]:[PASSWORD]@aws-1-eu-north-1.pooler.supabase.com:5432/postgres

# Database Connection Pool Settings
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20
DB_POOL_PRE_PING=true

# ==================== File Paths ====================
HEALTH_ONTOLOGY_PATH=health_ontology.json
KNOWLEDGE_BASE_PATH=knowledge_base/protocols.md
CHROMA_DB_PATH=./chroma_db

# ==================== OpenAI Configuration ====================
# Get your API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_MODEL=gpt-4
OPENAI_TEMPERATURE=0.3
OPENAI_EMBEDDING_MODEL=text-embedding-ada-002

# ==================== RAG Configuration ====================
RAG_CHUNK_SIZE=500
RAG_CHUNK_OVERLAP=50
RAG_RETRIEVER_K=3

# ==================== Assessment Configuration ====================
ASSESSMENT_DAYS=30
ASSESSMENT_MAX_RESULTS=5

# ==================== Supabase Configuration (Optional) ====================
# Only needed if using Supabase REST API or client SDK
SUPABASE_URL=https://[PROJECT-REF].supabase.co
SUPABASE_ANON_KEY=your-anon-key-here
